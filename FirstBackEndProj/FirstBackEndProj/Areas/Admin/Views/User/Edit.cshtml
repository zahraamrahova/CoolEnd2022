
@model FirstBackEndProj.Models.User
@{
    ViewBag.Title = "User Edit";
}


<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            Add Group
        </div>
        <div class="card-body card-block">
            <form action="@Url.Action("Edit", "User")" method="post" class="form-horizontal" id="edit-user-form">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="AuthGroupId" class=" form-control-label">Select Group</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <select name="AuthGroupId" id="AuthGroupId" class="form-control-sm form-control">
                            <option value="0"></option>

                            @foreach (var item in ViewBag.Groups as List<FirstBackEndProj.Models.AuthGroup>)
                            {
                                <option @(Model.AuthGroupId == item.Id ? "selected" : " ") value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <br>
                <div id="switch" class="row form-group">
                    <div class="col col-md-3">
                        <label for="Status" class=" form-control-label">Status</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <label class="switch switch-3d switch-primary mr-3">
                            <input name="Status" type="checkbox" class="switch-input" value="">
                            <span class="switch-label"></span>
                            <span class="switch-handle"></span>
                        </label>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary" btn-sm>
                        Update
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

