@model List<FirstBackEndProj.Models.AuthGroup>
@{
    ViewBag.Title = "Create User";
}


<h2>Create User</h2>


<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            Create User
        </div>
        <div class="card-body card-block">
            <form action="@Url.Action("Create", "User")" method="post" class="form-horizontal" id="create-user-form">
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="Email" class=" form-control-label">User Email</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input type="email" id="Email" required name="Email" class="form-control">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="selectSm" class=" form-control-label">Select Group</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <select name="AuthGroupId" id="AuthGroupId" class="form-control-sm form-control">
                            <option value="0"></option>

                            @foreach (var item in Model)
                            {
                                <option value="@item.Id">@item.Name</option>

                            }

                        </select>
                    </div>
                </div>
                <br> <br>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary" btn-sm>
                        Add
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
